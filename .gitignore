# ========================
# Node.js Core Ignored Files
# ========================
node_modules/            # All installed npm packages
npm-debug.log*           # Debug logs
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# ========================
# Environment Variables & Secrets
# ========================
.env                     # Main environment file
.env.*                   # Other env files like .env.local, .env.production
*.env                    # Any .env file pattern
firebase-adminsdk.json   # Firebase Admin private key
*.key                    # Private keys
*.pem                    # Certificates
*.crt

# ========================
# Build & Generated Files
# ========================
dist/                    # Build output folder
build/                   # If you use a build tool
tmp/                     # Temp files
.cache/                  # Cache folders
.vite/                   # Vite dev server cache
.eslintcache             # ESLint cache

# ========================
# Logs
# ========================
logs/
*.log

# ========================
# System / OS Files
# ========================
.DS_Store                # macOS file
Thumbs.db                # Windows thumbnail cache

# ========================
# IDEs and Editors
# ========================
.vscode/
.idea/
*.sublime-workspace
*.sublime-project

# ========================
# Testing
# ========================
coverage/
test-output/
jest-report/

# ========================
# Uploads / Files
# ========================
uploads/                 # If you handle file uploads
public/uploads/          # Public user-generated files

# ========================
# MongoDB or DB Artifacts (optional)
# ========================
dump/                    # MongoDB dump
*.mongo                  # Custom db artifacts

